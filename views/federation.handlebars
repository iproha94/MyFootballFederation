<div class="container content-margin-top">
    <div class="row center">
        Страница федерации {{name}}
    </div>
    <div class="row">
        <div class="tournament-list_header">
            Список турниров:
        </div>
        <div class="collection">
            {{#each tournaments}}
                <a href="/tournament/{{_id}}" class="collection-item">{{name}}</a>
            {{/each}}
        </div>
    </div>
    <div class="row right-align">
        <a class="waves-effect waves-light btn" href="/tournament/create/?federation={{name}}">Создать турнир</a>
    </div>
</div>
