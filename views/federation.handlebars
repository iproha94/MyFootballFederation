<div class="container content-margin-top content-flex">
    <div class="row center">
        <h3>Страница федерации {{federation.name}}</h3>
    </div>

    <div class="container content-margin-top content-flex">
        <ul class="collection with-header">
            <li class="collection-header center"><h5>Параметры федерации</h5></li>

            <li class="collection-item">Город: {{federation.city}}</li>
        </ul>
    </div>

    <div class="row">
        <div class="tournament-list_header">
            Список турниров:
        </div>
        <div class="collection">
            {{#each tournaments}}
                <a href="/tournament/{{_id}}" class="collection-item">{{name}}</a>
            {{/each}}
        </div>
    </div>
    {{#isAccess user federation.creators}}
    <div class="row right-align">
        <a class="waves-effect waves-light btn" href="/tournament/create/?federation={{federation.name}}">Создать турнир</a>
    </div>
    {{/isAccess}}

</div>
